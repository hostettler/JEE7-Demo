<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<container qualifier="wildfly" default="true">
		<configuration>
			<property name="managementAddress">192.168.99.100</property>
			<property name="managementPort">9970</property>
			<property name="username">admin</property>
			<property name="password">admin</property>
		</configuration>
		<protocol type="Servlet 3.0">
			<property name="host">192.168.99.100</property>
			<property name="port">8070</property>
		</protocol>
	</container>

	<extension qualifier="jacoco">
		<property name="includes">ch.demo.*</property>
	</extension>
</arquillian>
